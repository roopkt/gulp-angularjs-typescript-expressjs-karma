{
  "compilerOptions": {
    "target": "es5",
    "module": "AMD",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "declaration": false,
    "listFiles": false,
    "rootDir": "./src",
    "inlineSources": true,
    "noEmitOnError": true
  },
  "include": [
    "src/client/**/*.ts"
  ],
  "exclude": [
    "src/client/**/*.spec.ts",
    "./node_modules",
    "build"
  ],
  "compileOnSave": false
}